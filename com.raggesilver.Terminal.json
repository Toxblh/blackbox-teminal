{
  "app-id" : "com.raggesilver.Terminal",
  "runtime" : "org.gnome.Platform",
  "runtime-version" : "42",
  "sdk" : "org.gnome.Sdk",
  "command" : "terminal",
  "finish-args" : [
    "--allow=devel",
    "--filesystem=home",
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--device=dri",
    "--talk-name=org.freedesktop.Flatpak"
  ],
  "cleanup" : [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "/share/vala",
    "*.la",
    "*.a"
  ],
  "modules" : [
    {
      "name" : "vte",
      "buildsystem" : "meson",
      "config-opts": [
        "-Dgtk4=true",
        "-Dgtk3=false"
      ],
      "sources" : [
        {
          "type" : "git",
          "url" : "https://gitlab.gnome.org/GNOME/vte",
          "branch": "master",
          "commit": "e53cd45100848bfe782dbc5c4bf47ca94c46ec16"
        }
      ]
    },
    {
      "name" : "json-glib",
      "buildsystem" : "meson",
      "sources" : [
        {
          "type" : "git",
          "url" : "https://gitlab.gnome.org/GNOME/json-glib"
        }
      ]
    },
    {
      "name" : "marble",
      "buildsystem" : "meson",
      "sources" : [
        {
          "type" : "git",
          "url" : "https://gitlab.com/raggesilver/marble",
          "branch": "wip/gtk4"
        }
      ]
    },
    {
      "name" : "terminal",
      "builddir" : true,
      "buildsystem" : "meson",
      "sources" : [
        {
          "type" : "git",
          "url" : "https://gitlab.gnome.org/raggesilver/terminal"
        }
      ]
    }
  ]
}
